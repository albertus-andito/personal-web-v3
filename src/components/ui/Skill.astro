---
import { render, type CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'skills'>;
  }

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<li class="py-0.5">
  <div class="flex gap-5 items-center">
    <div class="relative min-w-48 shrink-0">
      <span class="text-foreground font-medium">{entry.data.category}</span>
    </div>
    <div class="flex flex-wrap gap-2 items-center">
      {entry.data.skills.map(skill => (
        <span class="px-3 py-1 rounded-full bg-gray-200 text-sm text-gray-700">{skill}</span>
      ))}
    </div>
  </div>
</li>
